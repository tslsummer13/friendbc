<h1>Users</h1>

<p><%= link_to 'Sign Up', new_user_url, class: 'btn btn-success' %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, user %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_user_url(user) %></td>
      <td><%= link_to '<i class="icon-trash"></i>'.html_safe, user_url(user), method: 'delete', data: { confirm: "Do you really want to delete this user?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

